{
  "name": "onebots-monorepo",
  "version": "0.5.0",
  "description": "IMHelper - 统一的消息助手，支持多种IM平台和协议",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm build:packages && pnpm build:rest",
    "build:packages": "pnpm --filter='./packages/*' --workspace-concurrency=1 build",
    "build:rest": "pnpm --filter='./protocols/*/*' --filter='./adapters/*' --filter=@onebots/docs --filter=onebots-dev build",
    "clean": "pnpm -r clean",
    "dev": "pnpm --filter=onebots-dev dev",
    "test:ws": "pnpm --filter=onebots-dev test:ws",
    "web:dev": "pnpm -r --filter=@onebots/web dev",
    "sdk:dev": "pnpm --filter=onebots-dev sdk:dev",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "prettier --check ./**/*.{ts,js}",
    "lint:fix": "prettier --write ./**/*.{ts,js,md}",
    "docs:dev": "vitepress dev docs --port 8989",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@9.0.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liucl-cn/onebots.git"
  },
  "keywords": [
    "onebot",
    "qq",
    "wechat",
    "dingtalk",
    "cq-http",
    "multi-protocol"
  ],
  "author": "凉菜",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lc-cn/onebots/issues"
  },
  "workspaces": [
    "packages/*",
    "adapters/*",
    "protocols/*/*",
    "docs",
    "development"
  ],
  "homepage": "https://github.com/lc-cn/onebots#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/koa-static": "^4.0.4",
    "@vitest/coverage-v8": "^1.6.1",
    "koa-static": "^5.0.0",
    "@types/ws": "^8.18.1",
    "@vitest/ui": "^1.6.1",
    "prettier": "^3.7.3",
    "vitepress": "^1.6.4",
    "vitest": "^1.6.1",
    "ws": "^8.18.3",
    "@types/node": "^22.7.3"
  },
  "pnpm": {
    "overrides": {
      "glob": "^10.0.0",
      "sourcemap-codec": "npm:@jridgewell/sourcemap-codec@^1.5.0"
    }
  }
}
