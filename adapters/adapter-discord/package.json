{
  "name": "@onebots/adapter-discord",
  "version": "1.0.0",
  "description": "onebots Discord 适配器（轻量版，支持 Node.js 和 Cloudflare Workers）",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./lite": {
      "types": "./lib/lite/index.d.ts",
      "default": "./lib/lite/index.js"
    }
  },
  "scripts": {
    "build": "rm -f *.tsbuildinfo && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "clean": "rm -rf lib *.tsbuildinfo"
  },
  "keywords": [
    "onebots",
    "discord",
    "adapter",
    "cloudflare-workers",
    "serverless",
    "lightweight"
  ],
  "author": "凉菜",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts"
  ],
  "devDependencies": {
    "tsc-alias": "latest",
    "typescript": "latest"
  },
  "peerDependencies": {
    "onebots": "workspace:*"
  },
  "peerDependenciesMeta": {
    "ws": {
      "optional": true
    },
    "https-proxy-agent": {
      "optional": true
    }
  },
  "dependencies": {
    "@types/node": "^22.7.3"
  },
  "optionalDependencies": {
    "ws": "^8.18.0",
    "https-proxy-agent": "^7.0.6"
  }
}
