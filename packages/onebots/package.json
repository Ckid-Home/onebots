{
  "name": "onebots",
  "version": "1.0.0",
  "description": "OneBots 整合适配器和协议，提供HTTP/WebSocket服务",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "onebots": "./lib/bin.js"
  },
  "scripts": {
    "start": "node lib/bin.js",
    "build": "rm -f *.tsbuildinfo && tsc --project tsconfig.json && tsc-alias -p tsconfig.json && cp -r src/config.sample.yaml lib/config.sample.yaml",
    "clean": "rm -rf lib *.tsbuildinfo"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "onebot",
    "qq",
    "wechat",
    "dingtalk",
    "cq-http",
    "multi-protocol"
  ],
  "author": "凉菜",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts"
  ],
  "devDependencies": {
    "@types/koa": "^3.0.1",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^22.0.0",
    "tsc-alias": "latest",
    "tsconfig-paths": "latest",
    "tsx": "latest",
    "typescript": "latest"
  },
  "dependencies": {
    "@karinjs/node-pty": "^1.1.3",
    "@onebots/core": "workspace:*",
    "@onebots/web": "workspace:*",
    "koa-static": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lc-cn/onebots.git"
  }
}
