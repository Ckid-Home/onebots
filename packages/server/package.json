{
  "name": "imhelper",
  "version": "0.5.1",
  "description": "IMHelper 服务端应用，整合适配器和协议，提供HTTP/WebSocket服务",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "imhelper": "./lib/bin.js"
  },
  "scripts": {
    "start": "node lib/bin.js",
    "build": "rm -f *.tsbuildinfo && tsc --project tsconfig.json && tsc-alias -p tsconfig.json && cp -r src/config.sample.yaml lib/config.sample.yaml",
    "clean": "rm -rf lib *.tsbuildinfo"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "onebot",
    "qq",
    "wechat",
    "dingtalk",
    "cq-http",
    "multi-protocol"
  ],
  "author": "凉菜",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts"
  ],
  "devDependencies": {
    "@types/koa-static": "^4.0.4",
    "@types/koa":"^3.0.1",
    "tsc-alias": "latest",
    "tsconfig-paths": "latest",
    "tsx": "latest",
    "typescript": "latest"
  },
  "dependencies": {
    "@karinjs/node-pty": "^1.1.3",
    "@imhelper/web": "workspace:*",
    "@imhelper/core": "workspace:*",
    "koa-static": "^5.0.0"
  },
  "optionalDependencies": {
    "@imhelper/adapter-wechat": "workspace:*",
    "@imhelper/adapter-qq": "workspace:*",
    "@imhelper/adapter-kook": "workspace:*",
    "@imhelper/adapter-discord": "workspace:*",
    "@imhelper/protocol-milky-v1": "workspace:*",
    "@imhelper/protocol-onebot-11": "workspace:*",
    "@imhelper/protocol-onebot-12": "workspace:*",
    "@imhelper/protocol-satori-1": "workspace:*"
  }
}
